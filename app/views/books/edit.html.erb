
<div class="container">
  <div class="edit">
  <div class="row">
    <div class="col-12">
      <h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

      <%= form_with model: @book do |f| %>
      <div for="inputTitle">Title</div>
        <%= f.text_field :title, autofocus: true, placeholder:"Title" %>
      <div for="inputBody">Opinion</div>
        <%= f.text_field :body, autofocus: true, placeholder:"Opinion" %>
      <div class="form">
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      </div>
      <% end %>

      <table>
        <tr>
          <td><%= link_to "Show", book_path(@book.id) %></td>
          <td class="Action"><%= link_to "Back", books_path %></td>
        </tr>
      </table>
    </div>
    </div>
  </div>
</div>
