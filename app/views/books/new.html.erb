<h1>本の投稿フォーム</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>本の説明</h4>
  <%= f.text_field :body %>
  <%= f.submit '投稿' %>
<% end %>